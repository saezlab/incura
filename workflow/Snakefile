from snakemake.utils import min_version

min_version('7.14.0')

configfile: 'config/config.yaml'
#container: 'workflow/envs/incura.sif'

ORGANISM = config['organism']

rule all:
    input: 
        'data/fimo_cluster_0/fimo.tsv', 'data/fimo_cluster_1/fimo.tsv', 'data/fimo_cluster_2/fimo.tsv', 'data/fimo_cluster_3/fimo.tsv', 'data/fimo_cluster_4/fimo.tsv', 
