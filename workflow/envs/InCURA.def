Bootstrap: docker
From: ubuntu:20.04


%environment
    export PATH=/opt/:$PATH
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   libstdc++6 \
                   cmake \
                   wget \
                   curl \
                   git \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libxslt-dev \
                   libopenblas-dev \
                   libexpat1-dev \
                   bedtools \
                   tabix

    # conda
    wget -O Miniforge3.sh "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh"
    bash Miniforge3.sh -b -p "/opt/conda"
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate

    # Create env
    mamba create -y -n=env -c conda-forge -c bioconda \
    python=3.10 \
    pip \
    jupyterlab \
    r-base \
    bioconductor-motifdb \
    multiprocess 

    conda activate env
    pip install promoterExtract ipykernel tqdm

    cpan install File::Which
    cpan install HTML::PullParser
    cpan install HTML::Template
    cpan install HTML::TreeBuilder
    cpan install JSON
    cpan install XML::Simple
    cpan install XML::Parser::Expat
    cpan Sys::Info


    wget https://meme-suite.org/meme/meme-software/5.5.7/meme-5.5.7.tar.gz
    tar zxf meme-5.5.7.tar.gz
    (cd meme-5.5.7 && ./configure --prefix=$HOME/meme --enable-build-libxml2 --enable-build-libxslt && make && make test && make install)

    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/opt/conda/lib
    export PATH=$HOME/meme/bin:$HOME/meme/libexec/meme-5.5.7:$PATH

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y
